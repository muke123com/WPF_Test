        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DownLoad" Height="300" Width="300">
	<Window.Resources>
		<DataTemplate x:Key="downloadDetail">
			<StackPanel Orientation="Horizontal">
				<TextBlock>111</TextBlock>
				<TextBlock>222</TextBlock>
