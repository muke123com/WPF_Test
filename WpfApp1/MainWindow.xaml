<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WPF Learn" Height="320" Width="320" 
		Loaded="Window_Loaded"
		Closing="Window_Closing"
		>
	<Window.Resources>
		<DataTemplate x:Key="_bookDetailViewTemplate">
			<StackPanel>
				<TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="15"></TextBlock>
				<TextBlock Text="{Binding Publisher}"></TextBlock>
				<TextBlock Text="{Binding Author}" FontSize="12" Foreground="#aaa" Margin="0 0 0 10"></TextBlock>
			</StackPanel>
		</DataTemplate>
	</Window.Resources>
	<Grid>
		<TextBlock x:Name="Text_Show" Height="50" TextWrapping="Wrap" VerticalAlignment="Top"></TextBlock>
		<ListBox x:Name="Item_List" Margin="0 60 0 0" SelectionChanged="Selected_Item" ItemTemplate="{StaticResource _bookDetailViewTemplate}"></ListBox>
	</Grid>
</Window>
